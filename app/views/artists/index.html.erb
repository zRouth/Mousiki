<div class="artist-title">
  Here are the artists that you listen to on spotify and their upcoming shows in Denver
</div>

<div class="artist-list">
  <% @artists.each do |artist| %>
  <div class="row" id="artist-list">
    <div class="row"><div class="large-12 columns"><p><br></p></div></div>
    <div class="small-2 large-4 columns">
        <div><%= artist.name %></div>
      </div>
    <div class="small-4 large-4 columns">
      <div><%= artist.date %> @ <%= artist.time %></div>
    </div>
    <div class="small-6 large-4 columns">
      <div> <%= artist.venue %></div>
    </div>
  </div>
    <div class="row"><div class="large-12 columns"><p><br></p></div></div>
    <% end %>
  </div>
</div>
